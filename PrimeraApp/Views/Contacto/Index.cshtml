@{
    var nombre = "";
    var email = "";
    var texto = "";
    var alerta = "";
    if (IsPost)
    {
        nombre = Request["exampleInputName2"];
        email = Request["exampleInputEmail2"];
        texto = Request["texto"];

        if (nombre.ToString() == "" || email.ToString() == "" || texto.ToString()=="")
        {
            alerta = "Error: Debe llenar todos los campos";
        }

        else {
            alerta = "Su mensaje ha sido enviado correctamente";
        }
    }
}
<p style="font-weight:bold; color:crimson;">@alerta</p>
<form class="form-horizontal" action="" method="post">
    <div class="form-group">
        <label for="exampleInputName2">Nombre</label>
        <input type="text" class="form-control" name="exampleInputName2" placeholder="Jane Doe">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail2">Email</label>
        <input type="email" class="form-control" name="exampleInputEmail2" placeholder="jane.doe@example.com">
    </div>
    <div class="form-group">
        <label for="cajitacomentario">Caja de comentario</label>
        <textarea class="form-control" name="texto" rows="3" placeholder="Lorem Ipsum Et Comentarium"></textarea>
    </div>
    <button type="submit" class="btn btn-default">Enviar</button>
</form>




